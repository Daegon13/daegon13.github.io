---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

/* CSS global de Tailwind para empaquetado */
import '../styles/tailwind.css';

/* Props SEO base: si no pasás url, evitamos canonical vacío */
const { title, description, image = '/og-default.png', url = '' } = Astro.props;
---
<html lang="es" class="scroll-smooth">
  <head>
    <!-- Metadatos básicos -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={url} />

    <!-- Canonical (solo si llega url por props) -->
    {url && <link rel="canonical" href={url} />}

    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <a href="#contenido" class="sr-only focus:not-sr-only">Saltar al contenido</a>
    <Nav />
    <main id="contenido" class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
